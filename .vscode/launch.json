{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/API/bin/Debug/net8.0/API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Launch Client",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "run-client",
            "url": "http://localhost:5174",
            "webRoot": "${workspaceFolder}/client"
        },
        {
            "name": "Launch Full Stack",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/API/bin/Debug/net9.0/API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "http://localhost:5174"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "postDebugTask": "run-client-background"
        }
    ],
    "compounds": [
        {
            "name": "API + Client",
            "configurations": [
                "Launch API",
                "Launch Client"
            ],
            "stopAll": true
        }
    ]
}